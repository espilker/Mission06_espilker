@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}
@model List<MovieModel>
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        @* List out the different sections for each movie *@
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent to</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @* Fill in data for the table from the database *@
        @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Category.CategoryName</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>

                        @* Allow user to edit and delete movies *@
                        <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
                        <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
                    </tr>
                }
        
    </tbody>
</table>
